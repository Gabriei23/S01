#include <iostream>
using namespace std;

int main() {
    int qtd;
    cout << "Digite quantas notas deseja inserir: ";
    cin >> qtd;

    float soma = 0;
    for (int i = 0; i < qtd; i++) {
        float nota;
        cout << "Digite a nota " << i + 1 << ": ";
        cin >> nota;

        while (nota < 0 || nota > 10) {
            cout << "Nota invalida! Digite novamente: ";
            cin >> nota;
        }

        soma += nota;
    }

    float media = soma / qtd;
    cout << "Media = " << media << endl;

    if (media >= 7)
        cout << "Aprovado" << endl;
    else
        cout << "Reprovado" << endl;

    return 0;
}
