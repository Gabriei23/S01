#include <iostream>
using namespace std;

int main() {
    int qtdNotas;
    float nota, soma = 0;

    cout << "Digite quantas notas deseja inserir: ";
    cin >> qtdNotas;

    for (int i = 0; i < qtdNotas; i++) {
        do {
            cout << "Digite a nota " << (i + 1) << " (0 a 10): ";
            cin >> nota;

            if (nota < 0 || nota > 10) {
                cout << "Nota invalida! Tente novamente." << endl;
            }
        } while (nota < 0 || nota > 10);

        soma += nota;
    }

    float media = soma / qtdNotas;

    cout << "Media final = " << media << endl;

    if (media >= 7) {
        cout << "Aprovado" << endl;
    } else {
        cout << "Reprovado" << endl;
    }

    return 0;
}
