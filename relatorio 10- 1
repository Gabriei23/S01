class Pokemon {
    #vida;

    constructor(nome, vidaInicial, ataque) {
        this.nome = nome;
        this.#vida = vidaInicial;
        this.ataque = ataque;
    }

    getVida() {
        return this.#vida;
    }

    receberDano(dano) {
        this.#vida -= dano;
        if (this.#vida < 0) this.#vida = 0;
        console.log(`${this.nome} recebeu ${dano} de dano. Vida atual: ${this.#vida}`);
    }

    atacar(alvo) {
        console.log(`${this.nome} atacou ${alvo.nome} causando ${this.ataque} de dano!`);
        alvo.receberDano(this.ataque);
    }
}

const nome1 = prompt("Nome do primeiro Pokémon:");
const vida1 = parseInt(prompt("Vida inicial do primeiro Pokémon:"));
const ataque1 = parseInt(prompt("Ataque do primeiro Pokémon:"));

const nome2 = prompt("Nome do segundo Pokémon:");
const vida2 = parseInt(prompt("Vida inicial do segundo Pokémon:"));
const ataque2 = parseInt(prompt("Ataque do segundo Pokémon:"));

const p1 = new Pokemon(nome1, vida1, ataque1);
const p2 = new Pokemon(nome2, vida2, ataque2);

console.log("=== Início da Batalha ===");
p1.atacar(p2);
if (p2.getVida() > 0) p2.atacar(p1);
console.log("=== Fim da Batalha ===");

console.log(`\nStatus final:`);
console.log(`${p1.nome}: ${p1.getVida()} de vida`);
console.log(`${p2.nome}: ${p2.getVida()} de vida`);
