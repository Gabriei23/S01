use std::io;

fn eh_par(numero: i32) -> bool {
    numero % 2 == 0
}

fn main() {
    let mut entrada = String::new();

    // Jogador 1 escolhe "par" ou "ímpar"
    println!("Jogador 1, escolha (par/ímpar):");
    io::stdin().read_line(&mut entrada).expect("Erro ao ler entrada");
    let escolha_jogador1 = entrada.trim().to_lowercase();
    entrada.clear();

    // Jogador 1 digita um número
    println!("Jogador 1, digite um número inteiro:");
    io::stdin().read_line(&mut entrada).expect("Erro ao ler entrada");
    let numero1: i32 = entrada.trim().parse().expect("Digite um número válido");
    entrada.clear();

    // Jogador 2 digita um número
    println!("Jogador 2, digite um número inteiro:");
    io::stdin().read_line(&mut entrada).expect("Erro ao ler entrada");
    let numero2: i32 = entrada.trim().parse().expect("Digite um número válido");

    // Calcula soma
    let soma = numero1 + numero2;

    println!("Jogador 1 escolheu: {} | Números: {} e {} | Soma: {}", escolha_jogador1, numero1, numero2, soma);

    // Verifica se soma é par ou ímpar
    let soma_par = eh_par(soma);

    // Determina vencedor
    if (soma_par && escolha_jogador1 == "par") || (!soma_par && escolha_jogador1 == "ímpar") {
        println!("Jogador 1 venceu!");
    } else {
        println!("Jogador 2 venceu!");
    }
}
